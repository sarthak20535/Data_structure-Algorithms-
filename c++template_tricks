#include <bits/stdc++.h>
using namespace std;


#define int         long long
#define double      long double
#define pb          push_back
#define pf          push_front
#define pii         pair<int,int>
#define vi          vector<int>
#define vii         vector<pii>
#define fo(i,l,u)   for(i=l;i<u;i++)
#define rfo(i,l,u)  for(i=l;i>=u;i--)
#define endl        '\n'
#define allfo(s)    for(auto it=(s).begin();it!=(s).end();it++)
int gcd(int a, int b) {if(a>b)swap(a,b) ;  if (a == 0)  return b; return gcd(b % a, a); }

signed main()
{
    ios_base::sync_with_stdio(false);cin.tie(0);cout.tie(0);
    int t,n,i;
    cin>>t;
    while(t--)
    {
        cin>>n;
        int arr[n];
        fo(i,0,n)
        {
            cin>>arr[i];
        }
        bool fla=true;
        fo(i,1,n-1)
        {
           if(arr[i]>arr[i-1]&&arr[i]>arr[i+1]){
               cout<<"YES\n";
           cout<<i<<" "<<i+1<<" "<<i+2<<endl;fla=false;break;}
        }
        if(fla)
        cout<<"NO\n";
    }

    return 0;
}
